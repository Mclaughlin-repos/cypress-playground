{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node", "cypress", "webpack-env"],
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types"
    ],
  },
  "awesomeTypescriptLoaderOptions": {
    "useBabel": true,
    "useCache": true,
    "useTranspileModule": true
  },
  "include": [
    "**/*.tsx",
    "cypress/**/*.ts.",
    "src/@types/assets/index.d.ts"
  ],
  "exclude": ["node_modules"]
}
